@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="btn btn-link" href="#0">Hello @User.Identity.Name</a></li>
        <li><a class="btn btn-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="btn btn-link" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}