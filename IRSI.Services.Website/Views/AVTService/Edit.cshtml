@model IRSI.Services.Website.Models.AVT.AVTItem

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Edit A vs T #@Model.Id</h3>
            </div>
            <div class="panel-body">
                <form asp-action="Edit" asp-controller="AVTService" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="FiscalYear">Fiscal Year</label>
                        <input type="text" class="form-control" name="FiscalYear" id="FiscalYear" value="@Model.FiscalYear" />
                    </div>
                    <div class="form-group">
                        <label for="Period">Period</label>
                        <input type="text" class="form-control" name="Period" id="Period" value="@Model.Period" />
                    </div>
                    <div class="form-group">
                        <label asp-for="StoreId" class="control-label"></label>
                        <select asp-for="StoreId">
                            @{
                                foreach (var store in ViewBag.Stores)
                                {
                                    if (store.Key == Model.Id)
                                    {
                                        <option value="@store.Key" selected>@store.Value.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@store.Key">@store.Value.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="FGActual" class="control-label"></label>
                        <input asp-for="FGActual" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FGTarget" class="control-label"></label>
                        <input asp-for="FGTarget" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AVTActual" class="control-label"></label>
                        <input asp-for="AVTActual" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AVTTheoric" class="control-label"></label>
                        <input asp-for="AVTTheoric" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ChampId" class="control-label"></label>
                        <input asp-for="ChampId" class="form-control" />
                        <span asp-validation-for="ChampId" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ChampName" class="control-label"></label>
                        <input asp-for="ChampName" class="form-control" />
                        <span asp-validation-for="ChampName" class="text-danger" />
                    </div>

                    <div class="form-group">
                        <label asp-for="PayTotal" class="control-label"></label>
                        <input asp-for="PayTotal" class="form-control" />
                        <span asp-validation-for="PayTotal" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" asp-controller="AVTService" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-default">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>